{
  "name": "angular-seed",
  "private": true,
  "version": "0.0.0",
  "description": "A starter project for AngularJS",
  "repository": "https://github.com/angular/angular-seed",
  "license": "MIT",
  "devDependencies": {
    "catw": "^1.0.1",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-jasmine": "^0.3.8",
    "karma-junit-reporter": "^0.4.1",
    "less": "^2.7.2",
    "onchange": "^3.2.1",
    "protractor": "^4.0.9",
    "standard": "^10.0.2",
    "watchify": "^3.9.0"
  },
  "scripts": {
    "comment": "  #on build make a new directory called build ",
    "clean": "rm -rf build && rm -rf dist",
    "lint": "standard app/**/app.js",
    "build": "mkdir -p build && npm run build-js &&  npm run build-less && npm run build-static",
    "build-js": "find app -name '*.js' -not -name '*.spec.js' -exec cp --parents \\{\\} build \\;",
    "build-less": "lessc app/less/main.less build/app/assets/bundle.css",
    "build-static": "find app -name '*.html' -exec cp --parents \\{\\} build \\;",
    "watch": "npm run build && npm run watch-js & npm run watch-static & npm run watch-less & npm run start",
    "watchify": "watchify app/app.js -o build/app/assets/bundle.js",
    "watch-js": "onchange app/**.js -v -- npm run watchify",
    "watch-less": "onchange app/less/main.less -v -- npm run build-less",
    "watch-static": "onchange app/**.html -v -- npm run build-static",
    "postinstall": "bower install",
    "update-deps": "npm update",
    "postupdate-deps": "bower update",
    "start": "http-server -a localhost -p 8000 -c-1 ./build/app",
    "pretest": "npm install",
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js --single-run",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor e2e-tests/protractor.conf.js",
    "update-index-async": "node -e \"var fs=require('fs'),indexFile='app/index-async.html',loaderFile='app/bower_components/angular-loader/angular-loader.min.js',loaderText=fs.readFileSync(loaderFile,'utf-8').split(/sourceMappingURL=angular-loader.min.js.map/).join('sourceMappingURL=bower_components/angular-loader/angular-loader.min.js.map'),indexText=fs.readFileSync(indexFile,'utf-8').split(/\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/).join('//@@NG_LOADER_START@@\\n'+loaderText+'    //@@NG_LOADER_END@@');fs.writeFileSync(indexFile,indexText);\""
  },
  "dependencies": {
    "angular": "^1.6.4",
    "angular-ui-bootstrap": "^2.5.0",
    "angular-ui-router": "^1.0.3"
  }
}
